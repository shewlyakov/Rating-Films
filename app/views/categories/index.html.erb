<div class="card">
  <div class="card-header">
    <h4>Categories</h4>
  </div>
  <div class="card-body">
    <div class="container text-center">
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col-md-4">
            <div class="category">
              <%= link_to (image_tag category.image, class: 'image'), category %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
